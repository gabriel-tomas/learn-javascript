<%- include("./includes/head") %>
<%- include("./includes/nav") %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
            <h1 class="text-center">Crie sua conta ou Entre</h1>
            <p class="text-center lead">Se cadastre ou faça seu login para ter acesso a seus contatos</p>

            <%- include("./includes/messages") %>

            <div class="row">
                
                <div class="col-lg">
                    <h2>Faça seu cadastro</h2>
                    <p>Caso ainda não tenha conta, preencha o formulário abaixo</p>

                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="signup-email">Endereço de email</label>
                          <input type="email" class="form-control" id="signup-email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="signup-password">Senha</label>
                            <input type="password" class="form-control" id="signup-email" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>

                </div>

                <div class="col-lg">
                    <h2>Faça seu login</h2>
                    <p>Já tem uma conta? faça o login abaixo</p>

                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="signup-email">Endereço de email</label>
                          <input type="email" class="form-control" id="signup-email" name="email">
                        </div>
                        <div class="form-group">
                            <label for="signup-password">Senha</label>
                            <input type="password" class="form-control" id="signup-email" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>

                </div>

            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("./includes/footer") %>