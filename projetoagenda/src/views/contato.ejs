<%- include("./includes/head") %>
<%- include("./includes/nav") %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include("includes/messages") %>
            <% if(contato._id) { %>
                <form class="form-contato" action="/contato/edit/<%= contato._id %>" method="post">
            <% } else {%>
                <form class="form-contato" action="/contato/register" method="post">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label for="contato-nome">Nome</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control" id="contato-nome" name="nome">
                </div>
                <div class="form-group">
                    <label for="contato-sobrenome">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" class="form-control" id="contato-sobrenome" name="sobrenome">
                </div>
                <div class="form-group">
                    <label for="contato-email">Email</label>
                    <input value="<%= contato.email %>" type="email" class="form-control" id="contato-email" name="email">
                </div>
                <div class="form-group">
                    <label for="contato-telefone">Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" class="form-control" id="contato-telefone" name="telefone">
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("./includes/footer") %>